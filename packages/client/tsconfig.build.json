{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/components/shared/*"],
      "@pages/*": ["./src/components/pages/*"],
      "@query/*": ["./src/query/*"],
      "@util/*": ["./src/util/*"]
    }
  },
  "include": ["src"],
  "exclude": ["build"]
}
