{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "declarationDir": "./build",
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build"
  ]
}
