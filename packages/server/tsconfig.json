{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "declarationDir": "./build",
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["build"]
}
